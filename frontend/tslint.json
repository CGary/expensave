{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    /* Angular specific */

    // The rules component-selector and directive-selector have the following arguments:
    // [ENABLED, "attribute" | "element", "prefix" | ["listOfPrefixes"], "camelCase" | "kebab-case"]
    "component-selector": [
      true,
      "element",
      [
        "app"
      ],
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      [
        "dir-prefix1",
        "dir-prefix2"
      ],
      "camelCase"
    ],
    "component-max-inline-declarations": true,
    "contextual-lifecycle": true,
    "no-conflicting-lifecycle": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-queries-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    // The rules component-class-suffix and directive-class-suffix have the following arguments:
    // [ENABLED, "suffix" | ["listOfSuffixes"]]
    // Where "suffix" is/are your custom(s) suffix(es), for instance "Page" for Ionic components.
    "component-class-suffix": [
      true,
      "Component"
    ],
    "directive-class-suffix": [
      true,
      "Directive"
    ],
    /* Project specific*/
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-empty-interface": true,
    "no-var-keyword": true,
    "no-unused-variable": true,
    "no-unused-expression": true,
    "no-namespace": true,
    "no-parameter-reassignment": true,
    "prefer-for-of": true,
    "promise-function-async": true,
    "only-arrow-functions": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-parameter",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "static-this": true,
    "triple-equals": true,
    "unnecessary-constructor": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "curly": true,
    "no-async-without-await": true,
    "no-console": true,
    "no-conditional-assignment": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-duplicate-imports": true,
    "no-null-keyword": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "deprecation": true,
    "prefer-const": true,
    "prefer-readonly": true,
    "array-type": [
      true,
      "array"
    ],
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "class-name": true,
    "file-name-casing": [
      true,
      "kebab-case"
    ],
    "interface-over-type-literal": true,
    "newline-per-chained-call": true,
    "no-boolean-literal-compare": true,
    "no-unnecessary-initializer": true,
    "one-variable-per-declaration": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": true,
    "prefer-method-signature": true,
    "prefer-template": true,
    "space-before-function-paren": [
      true,
      {
        "method": "never"
      }
    ],
    "type-literal-delimiter": true,
    "unnecessary-else": true,
    "variable-name": [
      true,
      "require-const-for-all-caps",
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "newline-before-return": true,
    "new-parens": true,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": true,
    "typedef-whitespace": true,
    "whitespace": true,
    "max-line-length": [
      true,
      120
    ]
  }
}